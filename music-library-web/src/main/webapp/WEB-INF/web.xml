<!-- web application deployment descriptor, needed for config that cannot be set using annotations -->
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- define existing roles -->
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>user</role-name>
    </security-role>

    <!-- protect URLs -->
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>User Area</web-resource-name>
            <!-- JUST AN EXAMPLE URL  -->
            <url-pattern>/nonexisting</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin area</web-resource-name>
            <!-- JUST AN EXAMPLE URL -->
            <url-pattern>/song/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/WEB-INF/hidden-jsp/login.jsp</form-login-page>
            <form-error-page>/WEB-INF/hidden-jsp/login-failed.jsp</form-error-page>
        </form-login-config>
    </login-config>
    
</web-app>
